---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contact | Mobinu Shadhin" sideBarActiveItemID="contact">
  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Contact Me</div>
  </div>

  <div class="mb-10">
    I am currently available for clinical opportunities and professional networking. Please feel free to reach out via the channels below.
  </div>

  <div class="grid gap-6">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">Email</h2>
        <p>mobinushadhin@gmail.com</p>
        <div class="card-actions justify-end">
          <a href="mailto:mobinushadhin@gmail.com" class="btn btn-primary">Send Email</a>
        </div>
      </div>
    </div>

    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">LinkedIn</h2>
        <p>Connect with me professionally.</p>
        <div class="card-actions justify-end">
          <a href="https://www.linkedin.com/in/mobinu-shadhin" target="_blank" class="btn btn-primary">View Profile</a>
        </div>
      </div>
    </div>

    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">Phone</h2>
        <p>(555) 123-4567</p> <div class="card-actions justify-end">
          <a href="tel:+15551234567" class="btn btn-primary">Call Now</a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
